extends ../body-layout

block content

    // page content
    .right_col(role="main")
        .page-title
            h4.title_left.m-b-15
                a(href="/v1.0/admin") خانه
                i.fa.fa-chevron-left.p-r-5.p-l-5
                | لیست نقش ها
        .clearfix

        .col-md-12.col-sm-12.col-xs-12
            .x_panel
                .x_title
                    h2
                        | لیست نقش ها
                    ul.nav.navbar-right.panel_toolbox
                        li
                            a.collapse-link
                                i.fa.fa-chevron-up
                        if session && session.access[Roles.Role].permission === Permission.RW
                            li
                                a(href="/v1.0/admin/roles/create")
                                    i.fa.fa-plus
                    .clearfix
                .x_content
                    table#datatable-responsive.table.table-striped.table-bordered.dt-responsive(cellspacing="0" width="100%")
                        thead
                            tr
                                th ردیف
                                th نقش
                                th تاریخ ثبت
                                th عملیات



